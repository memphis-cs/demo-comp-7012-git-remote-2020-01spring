<% if notice %>
  <div id="notice" class="alert alert-primary" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1>Cars</h1>

<table class="table table-hover table-dark">
  <thead>
    <tr class="table-primary">
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td>
          <%= link_to 'Show', car %>
          <%= link_to 'Edit', edit_car_path(car) %>
          <%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
